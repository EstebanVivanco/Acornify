                <form action="/saverecompensa" method="POST" enctype="multipart/form-data">
                    <h2 class="text-center">Crear recompensa</h2><br>
                    <% if(user){ %>
                        <input type="text" value="<%= user.id_tienda %>" name="id" id="id" hidden> 
