<!DOCTYPE html>
<html lang="en">
    
<% if(user){%>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="/c_navbar.js"></script>
    <title>Acornify</title>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <img src="/bellota.png" height="23px" style="padding-right: 1%;" alt="">
            <a class="navbar-brand" href="#!">Acornify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" href="/vista_catalogo">Tiendas</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/vista_historial/<%= user.id_usuario %>">Historial</a></li>
                </ul>
                <ul class="navbar-nav  mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item align-items-right"><a class="nav-link active" href="/logout">Cerrar Sesion</a></li>
                </ul>
            </div>
            
        </div>
    </nav>


    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Puntos acumulados</h1>
                <% if(resultsT){ %>
                    <p class="lead fw-normal  mb-0">Tienes <%= resultsT[0].puntos %> puntos</p>
                <%}%>
                
                <% if(asistencia[0].asistido < 3){ %>
                    <p class="fs-5 fw-bolder">Para poder reclamar recompensas debe haber comprado almenos tres veces en esta tienda</p>
                <%}%>
            </div>
        </div>
    </header>

    
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% results.forEach((recompensas) => { %>
                <div class="col mb-5">
                    <form action="/canjeoDePuntos" method="POST">
                        <input type="text" value="<%= recompensas.id_tienda %>" id="id" name="id" hidden> <!-- Obtener id de la tienda-->
                        <input type="text" value="<%= recompensas.id_recompensa %>" id="idrecompensa" name="idrecompensa" hidden > <!-- Obtener id de la recompensa-->
                        <% if(resultsT){ %>
                        <input type="text" value="<%= resultsT[0].id_tarjeta %>" id="id_tarjeta_fk" name="id_tarjeta_fk" hidden> <!-- Obtener id de la tarjeta que se modificara-->
                        <div class="card h-100">
                            <!-- Imagen de tienda -->
                            <img class="card-img-top" src="https://economiasustentable.com/wp-content/uploads/2020/01/starbucks-1-825x510.jpg" alt="...">
                            <!-- Detalles de tienda-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= recompensas.nombre_producto%></h5>
                                    <!-- Product price--> 

                                    <!-- puntos meta menos los puntos en la cuenta (no puede ser menor a 0)x-->

                                    
                                    <%  let p_faltantes = recompensas.meta_canje - resultsT[0].puntos;
                                    
                                        let mensaje = "Faltan " + p_faltantes + " puntos";

                                        if (p_faltantes <= 0){
                                            p_faltantes = 0;

                                            mensaje = "Canjeable!"
                                        }

                                        let p_finales = resultsT[0].puntos - recompensas.meta_canje;
                                        let puntos = resultsT[0].puntos;
                                    %>
                                    <span><%= mensaje %></span>
                                    <!-- la variable de mensaje es la que establece el texto que se muestra en el span de la tarjeta -->
                                    <input type="text" value="<%= p_finales %>" id="puntos_f" name="puntos_f" hidden>
                                </div>
                            </div>


                            <!-- Product actions-->
                            


                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <% if(asistencia[0].asistido < 3){ %>
                                    <!-- Cuando la asistencia es menor a 3, mostrara todas las cards en disable -->
                                    <div class="text-center"><button type="submit" disabled class="btn btn-outline-dark mt-auto" id="submit-btn" tabindex="5"><%= recompensas.meta_canje %> puntos</button></div>

                                <% }else{ %>
                                    <!-- si los puntos del usuario son menores a los de la meta del canje, el boton de la carta se muestra disable -->
                                    <% if(puntos < recompensas.meta_canje){ %>
                                        <div class="text-center"><button type="submit" disabled class="btn btn-outline-dark mt-auto" id="submit-btn" tabindex="5"><%= recompensas.meta_canje %> puntos</button></div>
                                    <% }else { %>
                                        <div class="text-center"><button type="submit" class="btn btn-outline-dark mt-auto" id="submit-btn" tabindex="5"><%= recompensas.meta_canje %> puntos</button></div>
                                    <% } %>

                                <% } %>

                            </div>
                        </div>
                        <%}%>
                    </form>
                </div>
                <% }) %>
            </div>
        </div>  
    </section>

    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright Â© Your Website 2023</p></div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
<% } %>
</html>

