<!DOCTYPE html>
<html lang="en">
    
<% if(user){%>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <script src="/c_navbar.js"></script>
    <title>Acornify</title>
</head>
<body>

    <c-navbar></c-navbar>

    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Puntos acumulados</h1>
                <p class="lead fw-normal  mb-0">Tienes <%= user.puntos %> puntos</p>
            </div>
        </div>
    </header>

    
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% results.forEach((recompensas) => { %>
                <div class="col mb-5">
                    <form action="/canjeoDePuntos" method="POST">
                        <input type="text" value="<%= recompensas.id_tienda %>" id="id" name="id"> <!-- Obtener id de la tienda-->
                        <input type="text" value="<%= user.id_tarjeta_fk %>" id="id_tarjeta_fk" name="id_tarjeta_fk"> <!-- Obtener id de la tarjeta que se modificara-->
                        <div class="card h-100">
                            <!-- Imagen de tienda -->
                            <img class="card-img-top" src="https://economiasustentable.com/wp-content/uploads/2020/01/starbucks-1-825x510.jpg" alt="...">
                            <!-- Detalles de tienda-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%= recompensas.nombre_producto%></h5>
                                    <!-- Product price--> 

                                    <!-- puntos meta menos los puntos en la cuenta (no puede ser menor a 0)x-->
                                    <%  let p_faltantes = recompensas.meta_canje - user.puntos;
                                        if (p_faltantes <= 0){
                                            p_faltantes = 0;
                                        }

                                        let p_finales = user.puntos - recompensas.meta_canje;
                                        
                                    %>
                                    <span>Faltan <%= p_faltantes %>  puntos</span>
                                    <input type="text" value="<%= p_finales %>" id="puntos_f" name="puntos_f">
                                </div>
                            </div>
                            <!-- Product actions-->
                            <button type="submit" class="btn btn-primary form-control form-control-sm" id="submit-btn" tabindex="5">Guardar</button>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <% if(user.puntos < recompensas.meta_canje){ %>
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto disabled" href="#"><%= recompensas.meta_canje %> puntos</a></div>
                                    <% }else { %>
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#"><%= recompensas.meta_canje %> puntos</a></div>
                                <% } %>
                                    
                            </div>
                        </div>
                    </form>
                </div>
                <% }) %>
            </div>
        </div>  
    </section>

    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright Â© Your Website 2023</p></div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
<% } %>
</html>

